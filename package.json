{
"name": "playwright-ui-complete",
"version": "1.0.0",
"private": true,
"scripts": {
"test": "npx playwright test",
"test:headed": "npx playwright test --headed",
"test:ui": "npx playwright test --ui",
"test:allure": "npx playwright test --reporter=list,allure-playwright",
"allure:generate": "allure generate allure-results --clean -o allure-report || true",
"allure:open": "allure open allure-report || true",
"start:server": "node server/app.js",
"start:server:dev": "nodemon server/app.js",
"start:streamlit": "streamlit run streamlit_app.py",
"install:browsers": "npx playwright install",
"ci": "npm run install:browsers && npm test && npm run allure:generate"
},
"devDependencies": {
"@playwright/test": "^1.36.0",
"allure-commandline": "^2.19.0",
"allure-playwright": "^2.0.1",
"supertest": "^6.3.3",
"nodemon": "^3.0.1"
}
}